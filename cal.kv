<MyCal>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        TextInput:
            id: cal
            text: "0"
            halign:'right'
            font_size:65
            size_hint:(1, .15)
            pos_hint: {"top":1,"left":1}


        GridLayout:
            rows:5
            cols:4
            #1
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"%"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"CE"
            Button:
                id: clear_in
                size_hint:(.. ze2,.2)
                font_size: 32
                text:"C"
                on_press:root.clear()
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"/"
            #2
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"7"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"8"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"9"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"x"
            #3
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"6"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"5"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"4"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"-"
            #4
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"3"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"2"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"1"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"+"
            #5
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"+/-"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"0"
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"."
            Button:
                size_hint:(.2,.2)
                font_size: 32
                text:"="
