WindowManager:
    MainWindow:
    SecondWindow:
    CameraClick:
    ThirdWindow:

<Label>
    background_color: (1,0.5,0.6,1)
    font_size: 30
<Button>
    background_color: (1,0,0,1)
<MainWindow>:
    name: "main"
    BoxLayout:
        BoxLayout:
            orientation: "vertical"
            size: root.width,root.height
            spacing:10
            padding:40
            Button:
                text: "New User"
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = 'left'

            Button:
                text: "Already Registered"
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction = 'up'
<SecondWindow>:
    name: "second"
    BoxLayout:
        namee:namee

        orientation: "vertical"
        size: root.width,root.height
        spacing:10
        padding:40
        Label:
            text: "Name"
        TextInput:
            id: namee
            multiline: False

        Button:
            text: "Sumbit"
            on_release:
                app.root.current = "camera"

                root.manager.transition.direction = 'left'

        Button:
            text: "Already Registered"
            background_color:(1,0,0,1)
            on_release:
                app.root.current = "third"
                root.manager.transition.direction = 'left'
<CameraClick>:
    name: "camera"
    orientation: 'vertical'
    #text : root.auth(SecondWindow.ids.namee.text)
    Camera:
        id: camera
        resolution: (640, 480)
        play: False
    ToggleButton:
        text: 'Play'
        on_press: camera.play = not camera.play
        size_hint_y: None
        height: '48dp'
    Button:
        text: 'Capture'
        size_hint_y: None
        height: '48dp'
        on_press: root.capture()

<ThirdWindow>:
    name: "third"
    BoxLayout:
        orientation: "vertical"
        size: root.width,root.height
        spacing:10
        padding:40
        Label:
            text: "Show your face"
        Button:
            text:"Finish"
            on_press: root.press()
        Button:
            text:"Add Another User"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = 'right'




