<MyGridLayout>:
    name:name
    food:food
    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False
            Label:
                text: "Food"
            TextInput:
                id: food
                multiline: False
        Button:
            text: "Submit"
            font_size: 30
            background_normal: ""
            #background_color: (1,0,0.5,1)
            background_color:("#eefa00")
            on_press: root.press()



